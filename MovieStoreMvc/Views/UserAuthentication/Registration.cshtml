@model MovieStoreMvc.Models.DTO.RegistrationModel
@{
    
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        form {
            width: 60%;
            margin: auto; 
            margin-top: 10%;
        }

        input[type=text], input[type=password] {
            width: 100%;
            padding: 12px 20px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid #ccc;
            box-sizing: border-box;
        }

        button {
            background-color: #aa048b;
            color: white;
            padding: 14px 20px;
            margin: 8px 0;
            border: none;
            cursor: pointer;
            width: 100%;
        }

        .container {
            padding: 16px;
        }

        .msg {
            padding: 0px;
        }

        .err {
            color: red;
        }
    </style>

</head>
<body>
@Html.ValidationSummary()

<div class="container">
    <div class="row">
        <div class="col-md-6 center-block">
            <h3>Registration</h3>
            <form class="w-40" asp-action="Registration" method="post">
                <div class="form-group">
                    <label>FName*</label>
                    <input type="text" class="form-control" asp-for="Name"/>
                    <span class="text-danger"  asp-validation-for="Name"></span>
                </div>

               

                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" asp-for="Email" />
                    <span class="text-danger" asp-validation-for="Email"></span>

                </div>

                <div class="form-group">
                    <label>Username</label>
                    <input type="text" class="form-control" asp-for="Username" />
                    <span class="text-danger" asp-validation-for="Username"></span>

                </div>

                <div class="form-group">
                    <label>Password (eg. John@123)</label>
                    <input type="password" class="form-control" asp-for="Password" />
                    <span class="text-danger" asp-validation-for="Password"></span>

                </div>

                <div class="form-group">
                    <label>Password confirm</label>
                    <input type="password" class="form-control" asp-for="PasswordConfirm" />
                    <span class="text-danger" asp-validation-for="PasswordConfirm"></span>

                </div>
                

                <br>
                    <div class="form-group">
                        <label>Role</label>
                        <input type="text" class="form-control" asp-for="Role" />
                        <span class="text-danger" asp-validation-for="Role"></span>
                    </div>
               
                
                @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                       <span class="text-info">@TempData["msg"]</span>
                    </div>
                }
              
                <button type="submit" class="btn btn-info">Registration</button>
                <a class="btn btn-primary" href="/UserAuthentication/Login">Login</a>
            </form>
        </div>
    </div>
</div>
</body>